{
		"env": {
				"browser": true,
				"commonjs": true,
				"es6": true,
				"node": true
		},
		"globals": {
				"React": true
		},
		"extends": [
				"eslint:recommended",
				"plugin:react/recommended"
		],
		"parserOptions": {
				"ecmaFeatures": {
						"experimentalObjectRestSpread": true,
						"jsx": true
				},
				"sourceType": "module"
		},
		"plugins": [
				"react"
		],
		"rules": {
				"linebreak-style": [
						"error",
						"windows"
				],
				"quotes": [
						"warn",
						"single"
				],
				"semi": [
						"error",
						"always"
				],
				"no-console": [
					"error", {
						"allow":
						["log", "error"]
					}
				]
		}
}
